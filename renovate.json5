{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  // ðŸ‘‡ Defined in https://github.com/renovatebot/renovate/blob/37.71.1/lib/config/presets/internal/config.ts
  extends: [
    'config:best-practices',
    'config:js-app',
    'github>davidlj95/renovate-config:angular/v19.2.x',
    'github>davidlj95/renovate-config:personal/config',
  ],
  npm: {
    // Keep Angular CLI versions used to create example apps updated
    managerFilePatterns: [
      'projects/ngx-meta/example-apps/angular-cli-versions.json',
    ],
  },
  packageRules: [
    // Lib config for published package JSONs
    {
      matchFileNames: ['projects/ngx-meta/src/package.json'],
      extends: ['config:js-lib'],
    },
    // Angular version installed
    {
      matchDepNames: [
        '@angular/*',
        '@angular-devkit/*',
        '@schematics/*',
        'angular-eslint',
        'ng-packagr',
      ],
      matchFileNames: ['package.json'],
      allowedVersions: '^19',
    },
    // Example apps major versions
    {
      matchFileNames: [
        'projects/ngx-meta/example-apps/angular-cli-versions.json',
      ],
      matchDepNames: ['v19'],
      allowedVersions: '^19',
    },
    {
      matchFileNames: [
        'projects/ngx-meta/example-apps/angular-cli-versions.json',
      ],
      matchDepNames: ['v20'],
      allowedVersions: '^20',
    },
    {
      matchFileNames: [
        'projects/ngx-meta/example-apps/angular-cli-versions.json',
      ],
      matchDepNames: ['v21'],
      allowedVersions: '^21',
    },
    // API Documenter to use Markdown tables
    // Watching the issue to see if we can upgrade when fixed
    // https://github.com/microsoft/rushstack/issues/4586
    {
      matchDepNames: ['@microsoft/api-documenter'],
      allowedVersions: '7.23.38',
    },
    // Jest / Angular compat
    // https://www.npmjs.com/package/@angular-devkit/build-angular/v/19.2.19?activeTab=code
    {
      matchDepNames: ['jest', '@jest/*'],
      allowedVersions: '^29',
    },
    // mkdocs-material[imaging] & Python
    // It requires Pillow 11:
    // https://github.com/squidfunk/mkdocs-material/blob/9.7.1/pyproject.toml#L66
    // Which is just compatible with at most Python 3.13
    // https://github.com/python-pillow/Pillow/blob/12.0.0/docs/installation/newer-versions.csv
    {
      matchManagers: ['poetry'],
      matchDepNames: ['python'],
      allowedVersions: '3.13.x',
    },
  ],
}
