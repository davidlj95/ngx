{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // ðŸ‘‡ Debugging
    "sourceMap": true,
    // ðŸ‘‡ Base configs (`tsc --init`)
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    //ðŸ‘‡ Read JSON
    "resolveJsonModule": true,
    //ðŸ‘‡ Better than TS/JS in same file:
